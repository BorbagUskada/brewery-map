<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_fragment_slidinguppanel"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/mainDark">

    <TextView
        android:id="@+id/tv_bottom_fragment_brew_name"
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="35dp"
        android:gravity="center_vertical"
        android:background="@color/mainYellow"
        style="@style/Base.TextAppearance.AppCompat.Title" />

    <TextView
        android:id="@+id/tv_brew_beers_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_bottom_fragment_brew_name"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="@string/details_label_nb_beers"
        android:textColor="#FFF"/>

    <TextView
        android:id="@+id/tv_brew_beers_nb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_alignEnd="@id/tv_brew_beers_label"
        android:layout_alignRight="@id/tv_brew_beers_label"
        android:layout_alignTop="@id/tv_brew_beers_label"
        android:layout_marginRight="-15dp"
        android:layout_marginEnd="-15dp"
        android:textColor="#FFF"
        android:text="5"/>

    <Button
        android:id="@+id/btn_go_to_brew_details"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@color/mainYellow"
        android:text="Accès à la fiche"
        android:layout_below="@+id/tv_bottom_fragment_brew_name"
        android:layout_marginTop="16dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp" />



</RelativeLayout>