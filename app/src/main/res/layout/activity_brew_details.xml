<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainDark">

    <TextView
        android:id="@+id/tv_details_brew_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/brew_details_activity_side_margin"
        android:layout_marginStart="@dimen/brew_details_activity_side_margin"
        android:layout_marginTop="16dp"
        android:textColor="@color/mainYellow"
        android:textSize="28sp"
        android:text="Spanish brew"/>

    <View
        android:id="@+id/v_separator1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="8dp"
        android:layout_below="@id/tv_details_brew_name"
        android:background="@color/mainYellow"/>

    <TextView
        android:id="@+id/tv_details_label_year"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_separator1"
        android:layout_marginLeft="@dimen/brew_details_activity_side_margin"
        android:layout_marginStart="@dimen/brew_details_activity_side_margin"
        android:textColor="@color/mainYellow"
        android:text="@string/details_label_foundingDate"/>

    <TextView
        android:id="@+id/tv_details_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_details_label_year"
        android:layout_toRightOf="@id/tv_details_label_year"
        android:layout_alignTop="@id/tv_details_label_year"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="@color/mainYellow"/>


    <TextView
        android:id="@+id/tv_details_label_nb_beers"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_details_label_year"
        android:layout_marginLeft="@dimen/brew_details_activity_side_margin"
        android:layout_marginStart="@dimen/brew_details_activity_side_margin"
        android:layout_marginTop="@dimen/brew_details_activity_vertical_space"
        android:textColor="@color/mainYellow"
        android:text="@string/details_label_nb_beers"/>

    <TextView
        android:id="@+id/tv_details_nb_beers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_details_label_year"
        android:layout_toRightOf="@id/tv_details_label_year"
        android:layout_alignTop="@id/tv_details_label_nb_beers"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/mainYellow"/>

    <TextView
        android:id="@+id/tv_details_beers_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_details_label_nb_beers"
        android:layout_marginLeft="@dimen/brew_details_activity_side_margin"
        android:layout_marginStart="@dimen/brew_details_activity_side_margin"
        android:layout_marginTop="@dimen/brew_details_activity_vertical_space"
        android:textColor="@color/mainYellow"
        android:text="@string/details_label_beers"/>

    <ListView
        android:id="@+id/lv_details_beers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/brew_details_activity_vertical_space"
        android:layout_marginLeft="@dimen/brew_details_activity_side_margin"
        android:layout_marginStart="@dimen/brew_details_activity_side_margin"
        android:layout_marginRight="@dimen/brew_details_activity_side_margin"
        android:layout_marginEnd="@dimen/brew_details_activity_side_margin"
        android:layout_marginBottom="@dimen/brew_details_activity_vertical_space"
        android:layout_below="@id/tv_details_beers_label"
        android:background="@drawable/listview_beers_border">

    </ListView>

</RelativeLayout>